<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/small_margin_4dp"
    android:layout_marginLeft="@dimen/standard_margin_8dp"
    android:layout_marginRight="@dimen/standard_margin_8dp"
    android:layout_marginTop="@dimen/small_margin_4dp"
    app:cardCornerRadius="@dimen/small_margin_6dp"
    app:cardElevation="@dimen/small_margin_6dp"
    android:padding="@dimen/small_padding_4dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/title_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="@dimen/medium_text_22sp"
                android:layout_marginTop="@dimen/standard_margin_8dp"
                android:layout_marginLeft="@dimen/standard_margin_8dp"
                android:textColor="@color/colorPrimary"
                tools:text="ARTICLE NAME SHOULD BE WRITTEN HERE AND WRAP TO THREE LINES..."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin_4dp"
                android:layout_marginTop="@dimen/small_margin_4dp">
                <TextView
                    android:id="@+id/source_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/standard_text_18sp"
                    android:textColor="@color/colorAccent"
                    tools:text="SPORTS"/>
                <TextView
                    android:id="@+id/article_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large_margin_16dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/standard_text_18sp"
                    tools:text="This is the authors name"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin_4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/football_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_18sp"
            tools:text="Date of Article"/>
        <View
            android:layout_width="@dimen/view_break_size_4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="@dimen/standard_margin_8dp"
            android:layout_marginRight="@dimen/standard_margin_8dp"/>
        <TextView
            android:id="@+id/football_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standard_text_18sp"
            tools:text="Time Stamp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/standard_margin_8dp"
        android:gravity="end"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/standard_text_18sp"
        android:text="@string/read_more"/>
    </LinearLayout>
</android.support.v7.widget.CardView>